<h1>home page</h1>
<p> welcome <%= current_user.full_name%> </p>
<%# form for strip, gotten from googling stripes checkout guide %>
<%= form_with url: payment_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $5.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.application.credentials.stripe[:publishable] %>"
          data-description="donation"
          data-amount="500"
          data-locale="auto"
          data-currency="aud">
  </script>
          
<% end %>

<div>
   <%= image_tag current_user.profile_pic_url if current_user.profile_pic_url %>
</div>
<div>
    <%= link_to 'edit profile details', edit_user_registration_path %>
</div>
<div>
    <%= link_to 'create food', new_food_path%>
</div>
<div>
    <%= link_to 'view foods', foods_path%>
</div>
<div>
    <%= link_to 'log out', destroy_user_session_path, method: :delete%>
</div>
